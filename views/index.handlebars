<div class="container grid-md">
	<div class="columns">
		<header class="column col-12">
			<img id="burger-gif" class="centered img-responsive" src="https://media.giphy.com/media/uQvxobRExS9nG/giphy.gif">
			<h1 class="text-center">Eat-Da-Burger!</h1>
			<div class="divider"></div>
		</header>		
		<div class="column">
			<h2 class="h3">To Eat</h2>
			{{#each burgers}}
				{{#unless this.devoured}}
					<form action="/{{this.id}}?_method=put" method="POST">
						<div class="tile">
							<div class="tile-content">
								<p class="tile-title">{{this.id}}. {{this.burger_name}}</p>								
							</div>
							<div class="tile-action">
								{{> devour-burger}}
							</div>
						</div>
					</form>
				{{/unless}}
			{{/each}}
		</div>
		<div class="divider-vert"></div>
		<div class="column">
			<h2 class="h3">Devoured</h2>
			{{#each burgers}}
				{{#if this.devoured}}
					<div class="tile">
						<div class="tile-content">
							<p class="tile-title">{{this.id}}. {{this.burger_name}}</p>								
						</div>
					</div>
				{{/if}}
			{{/each}}
		</div>
	</div>
	<div class="columns">
		{{!-- add burger form --}}
		<div class="column col-12">
			<h2>Add a Burger</h2>
		</div>
		<div class="column col-8 col-sm-10 col-xs-12">
			<form action="/" method="POST">
				<div class="form-group mb-2">
					<label for="txtBurgerName" class="form-label">Enter a burger you want to eat:</label>
					<div class="input-group">
						<input type="text" id="txtBurgerName" name="burger_name" class="form-input input-lg">
						<button type="submit" class="btn btn-primary input-group-btn btn-lg">Add Burger</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>